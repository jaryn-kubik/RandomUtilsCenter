@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
	<MudAppBar Dense="true">
		@foreach (var link in GetLinks())
		{
			<NavLink href="@link.Key" class="mx-1 flex-grow-1 text-center">
				<MudPaper Class="py-2">@link.Value</MudPaper>
			</NavLink>
		}
	</MudAppBar>
	<MudMainContent>
		<MudContainer MaxWidth="MaxWidth.False" Class="d-flex flex-column py-3 gap-1">
			@Body
		</MudContainer>
	</MudMainContent>
</MudLayout>

@code
{
	private MudTheme _theme = new MudTheme { IsDarkMode = true };

	private IEnumerable<KeyValuePair<string, string>> GetLinks()
	{
		yield return new("torrents", "Torrents");
		//yield return new("shows", "Shows");
		//yield return new("debrid", "Debrid");
		//yield return new("downloads", "Downloads");
		yield return new("watcher", "Watcher");
		yield return new("ping", "Ping");
	}
}